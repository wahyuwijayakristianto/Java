    private void updateMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_updateMouseClicked
        // TODO add your handling code here:
       try
            {
                String sql = "update buah set kode=?, harga=?, stok=? where kode='"+kodetxt.getText()+"'";
                //mengupdate database buah yang mana kode = kode teks
                PreparedStatement st=conn.prepareStatement(sql);
               //pengiriman statement SQL 
                {
                try
                    {
                        st.setString(1,kodetxt.getText());
                        st.setString(2,hargatxt.getText());
                        st.setString(3,stoktxt.getText());
                        
                        //ngambil teks yang ada di kode harga stok
                        st.executeUpdate();
                        //mengeksekusi query yang tidak menghasilkan apapun, misal INSERT, UPDATE, DELETE
                        UpdateTabel();
                        //menampilkan tabel sql lagi
                        

                        JOptionPane.showMessageDialog(null,"Update Data Sukses");
                        // kotak pesan "Update Data Sukses"
                    }catch (Exception e)
                    {
                        JOptionPane.showMessageDialog(null, "Update Data Gagal");
                       // kotak pesan "Update Data Gagal"
                    }
                }
           }catch (Exception e)
           {}
       
    }//GEN-LAST:event_updateMouseClicked

    private void SHOWActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SHOWActionPerformed
        // TODO add your handling code here:
        try
            {
                String sql="select * from buah where kode='" + kodetxt.getText() + "'";
                //pilih semua dari buah yang mana kode sama dengan kode teks
                st=conn.createStatement();
                rs=st.executeQuery(sql);

                while(rs.next())
                {
                    kodetxt.setText(rs.getString("kode"));
                    //menampilkan kode dari tabel buah di mysql
                    namatxt.setText(rs.getString("nama buah"));
                    //menampilkan nama buah dari tabel buah di mysql
                    hargatxt.setText(rs.getString("harga"));
                    //menampilkan harga dari tabel buah di mysql
                    stoktxt.setText(rs.getString("stok"));
                    //menampilkan stok dari tabel buah di mysql
                    
                }
            }catch(Exception e)
            {
                JOptionPane.showMessageDialog(null,"GAGAL");
                // kotak pesan "Update Data Gagal"
            }         
    }//GEN-LAST:event_SHOWActionPerformed


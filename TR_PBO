    private void bayarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_bayarActionPerformed
        // TODO add your handling code here:

        double kembalian = Double.parseDouble(txtuang.getText()) - Double.parseDouble(txttotal.getText());
        // teks dari uang dikurangi teks dari total;
        if (kembalian >= 0) {
            //jika kembalian lebih sama dengan 0
            txtsusuk.setText(kembalian + "");
            //set teks di teks susuk kembaliannya
            JOptionPane.showMessageDialog(null, "terima kasih telah membeli");
            //keluar kotak pesan "terima kasih telah membeli"
            

            kosongkan();
            //memanggil void kosongkan()
        } else {
            JOptionPane.showMessageDialog(null, "uang kurang BOS");
            //keluar kotak pesan "uang kurang BOS"
        }
    }//GEN-LAST:event_bayarActionPerformed

